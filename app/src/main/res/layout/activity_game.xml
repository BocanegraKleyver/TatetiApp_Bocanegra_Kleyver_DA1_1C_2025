<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

<LinearLayout
android:orientation="vertical"
android:gravity="center_horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<TextView
    android:id="@+id/textNombre"
    android:text="Jugador: "
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="#333333"
    android:layout_marginBottom="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/textSimbolo"
    android:text="Símbolo: "
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="#333333"
    android:layout_marginBottom="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/textDificultad"
    android:text="Dificultad: "
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="#333333"
    android:layout_marginBottom="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/textStats"
    android:text="Ganados: 0 | Perdidos: 0 | Empates: 0"
    android:textSize="18sp"
    android:textStyle="italic"
    android:textColor="#555555"
    android:layout_marginBottom="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<GridLayout
    android:id="@+id/tablero"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alignmentMode="alignMargins"
    android:columnCount="3"
    android:rowCount="3"
    android:layout_marginTop="16dp">


    <Button android:id="@+id/casilla0" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla1" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla2" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla3" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla4" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla5" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla6" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla7" style="@style/CasillaTateti"/>
    <Button android:id="@+id/casilla8" style="@style/CasillaTateti"/>

</GridLayout>

<Button
    android:id="@+id/buttonRestart"
    android:text="Reiniciar Partida"
    android:background="@drawable/boton_redondo_nuevo_juego"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:padding="14dp" />

<Button
    android:id="@+id/buttonMenu"
    android:text="Volver al Menú"
    android:background="@drawable/boton_redondo_salir"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:padding="14dp" />

</LinearLayout>

    </ScrollView>
