<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/textNombre"
        android:text="Jugador: "
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textSimbolo"
        android:text="SÃ­mbolo: "
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <GridLayout
        android:id="@+id/tablero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="16dp">

        <!-- 9 botones para el tablero -->
        <Button android:id="@+id/casilla0" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla1" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla2" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla3" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla4" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla5" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla6" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla7" style="@style/CasillaTateti"/>
        <Button android:id="@+id/casilla8" style="@style/CasillaTateti"/>

    </GridLayout>
</LinearLayout>
