<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_home"
        android:scaleType="centerCrop"
        android:contentDescription="Fondo de bienvenida" />


    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <Button
            android:id="@+id/btn_nuevo_juego"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/boton_redondo_nuevo_juego"
            android:backgroundTint="@null"
            android:padding="14dp"
            android:text="Nuevo Juego"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_continuar"
            android:text="Continuar"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/boton_redondo_continuar"
            android:padding="14dp" />

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/boton_redondo_salir"
            android:padding="14dp"
            android:text="Salir"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
